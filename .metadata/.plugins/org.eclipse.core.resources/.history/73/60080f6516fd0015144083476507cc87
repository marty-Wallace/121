package gui;

import java.awt.BorderLayout;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.image.BufferedImage;
import java.io.File;

import javax.swing.JButton;
import javax.swing.JFileChooser;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;
import javax.swing.JOptionPane;
import javax.swing.JPanel;
import javax.swing.JTextField;
import javax.swing.border.EmptyBorder;
import javax.swing.border.EtchedBorder;

import fileManagement.FileManager;

public class MosaicGUI {
	
	private static JFileChooser fileDialog = new JFileChooser(System.getProperty("user.dir"));

	private JFrame frame;
	private BufferedImage image; 
	private DisplayPanel panel;
	private JLabel fileNameLabel, statusLabel;
	private JButton smallerButton, largerButton;
	private JTextField search;
	
	public MosaicGUI(){ 
		this.frame = new JFrame();
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		image = null; 
		init();
		frame.setSize(600, 600);
		frame.setResizable(true);
		frame.setVisible(true);
	}
	
	
	public void init() {
		frame = new JFrame("Photo Mosaic");
		JPanel contentPane = (JPanel)frame.getContentPane();
		contentPane.setBorder(new EmptyBorder(10,10,10,10));
		
		createMenu();
		contentPane.setLayout(new BorderLayout(6,6));
		
		panel = new DisplayPanel();
		panel.setBorder(new EtchedBorder());
		contentPane.add(panel, BorderLayout.CENTER);
		
		fileNameLabel = new JLabel(); 
		contentPane.add(fileNameLabel, BorderLayout.SOUTH);
		
		JPanel toolbar = new JPanel();
		toolbar.setLayout(new GridLayout(0,1));
		
		JLabel searchLabel = new JLabel("Search parameters");
		search = new JTextField();
		toolbar.add(searchLabel);
		toolbar.add(search);
		contentPane.add(toolbar, BorderLayout.WEST);
        showFilename(null);
        setButtons(false);
        frame.pack();
	}
	
	public void createMenu() {
		
		JMenuBar menubar = new JMenuBar();
		frame.setJMenuBar(menubar);
		
		JMenu menu;
		JMenuItem item; 
		
		menu = new JMenu("File");
		menubar.add(menu);
		
		item = new JMenuItem("Open...");
		item.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				openFile();
			}
		});
		
	
	menu.add(item);
	menu.addSeparator();
	
	item =  new JMenuItem("Save As...");
	item.addActionListener(new ActionListener() {
		@Override
		public void actionPerformed(ActionEvent e) {
			saveAs();
		}
	});

	menu.add(item);
	menu.addSeparator();
	
	item = new JMenuItem("Close");
	item.addActionListener(new ActionListener() {
		@Override
		public void actionPerformed(ActionEvent e) {
			close();
		}
	});
	
	menu.add(item);
	menu.addSeparator();
	
	item = new JMenuItem("Quit");
	item.addActionListener(new ActionListener() {
		@Override
		public void actionPerformed(ActionEvent e) {
			System.exit(0);
		}
	});
	
	menu.add(item);
	
	
	}
	
	public void openFile(){
		
		int success = fileDialog.showOpenDialog(frame);
		
		if(success != JFileChooser.APPROVE_OPTION) {
			return; 
		}
		File file = fileDialog.getSelectedFile();
		image = FileManager.loadImage(file);
		if( image == null) {
			JOptionPane.showMessageDialog(frame, "The file was not a valid format.", "ERROR!!", JOptionPane.ERROR_MESSAGE);
			return;
		}
		
		panel.set(image);
		setButtons(true);
		showFilename(file.getPath());
		showStatus("File loaded");
		frame.pack();
		
	}
	
	public void saveAs(){ 
		
		if(image != null) {
			int success = fileDialog.showSaveDialog(frame);
			
			if(success != JFileChooser.APPROVE_OPTION) {
				return;
			}
			File file = fileDialog.getSelectedFile();
			FileManager.saveImage(image, file, "jpg");
			
			showFilename(file.getPath());
		}
		
	}
	
	private void showFilename(String name) {
		
		if(name == null) {
			fileNameLabel.setText("No file is displayed.");
		}else{
			fileNameLabel.setText("File: " + name);
		}
	}
	
	
	private void showStatus(String status) {
		statusLabel.setText(status);
	}
	
	public void close() {
		
		image = null;
		panel.clearImage();
		showFilename(null);
		setButtons(false);
	}
	
	public void setButtons(boolean b) {
		
	}
}
